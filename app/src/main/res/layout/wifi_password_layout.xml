<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >


    <TextView
        android:id="@+id/txt_wifi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" aa"
        android:padding="5dp"
        android:textSize="17sp"
        android:layout_gravity="center"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp">

        <EditText
            android:id="@+id/edit_text_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="password"
            android:inputType="textPassword"
            android:layout_centerInParent="true"
            android:maxLines="1"
            />
        <ImageView
            android:id="@+id/image_show_old_password"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


    <View
        android:id="@+id/view01"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp" />


    <LinearLayout
           android:id="@+id/login_button_layout"
           android:layout_width="wrap_content"
           android:layout_height="50dp"
         android:orientation="horizontal"
         android:gravity="center"
         >


         <RelativeLayout
             android:id="@+id/ll_cancel_layout"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             >
             <TextView
                 android:id="@+id/btn_cancel"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="cancel"
                 android:gravity="center"
                 android:layout_alignParentLeft="true"/>

         </RelativeLayout>
         <View
             android:layout_width="1dp"
             android:layout_height="match_parent" android:layout_gravity="center_horizontal"
              />

         <RelativeLayout
             android:id="@+id/ll_connect_layout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
            >
             <TextView
                 android:id="@+id/btn_connect"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:text="connect"
                android:gravity="center"
                 android:layout_alignParentRight="true"/>

         </RelativeLayout>
